{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      // used for importing files from the lib folder in the demo folder
      // important: alias must match alias in vite.config.ts
      "@lib/*": [
        "src/*"
      ]
    },
    "declaration": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": [
    "env.d.ts",
    "src/**/*",
    "demo/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
