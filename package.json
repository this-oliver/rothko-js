{
  "name": "rothko-js",
  "version": "0.7.3",
  "description": "Generate colors and visual patterns based on text-based input",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/this-oliver/rothko-js.git"
  },
  "main": "./package/index.umd.js",
  "types": "./package/index.d.ts",
  "scripts": {
    "build": "npm run clear && vue-tsc --noEmit && vite build --mode lib",
    "build:demo": "npm run clear:demo && vue-tsc --noEmit && vite build --mode demo",
    "bump": "fistbump",
    "clear": "rm -rf package",
    "clear:demo": "rm -rf dist",
    "dev": "vite --mode demo",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepack": "npm test && npm run lint && npm run build",
    "prepare": "husky",
    "preview:demo": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "p5": "^1.6.0",
    "vue": "^3.2.47",
    "vuetify": "^3.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.8.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^18.14.2",
    "@types/p5": "^1.6.2",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/tsconfig": "^0.1.3",
    "chai": "^4.3.7",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^13.2.2",
    "typescript": "~4.8.4",
    "vite": "^4.1.4",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.33.0",
    "vue-tsc": "^1.2.0"
  },
  "lint-staged": {
    "*": "npm run lint",
    "lib/**/*": "npm run test"
  }
}
